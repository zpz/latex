\pagestyle{empty}

\setlength{\columnsep}{100pt}
\setlength{\columnseprule}{0pt}
\setlength{\parindent}{0pt}
\setlength{\parskip}{\baselineskip}

% Can't use the 'figure' environment within multicolumns.
% Set up my own counter and caption for figures.
\newcounter{figscount}
\newcommand{\figcaption}[1]{%
    \addtocounter{figscount}{1}%
    {\leftskip=1cm \rightskip=1cm \small
    Figure~\arabic{figscount}\hspace{.5em} #1\par}}

